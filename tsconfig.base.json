{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": [
      "es2022"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": [
      "development"
    ],

    "baseUrl": ".",
    "paths": {
      "@components/*": ["apps/web/src/app/components/*"],
      "@globals/*": ["apps/web/src/app/globals/*"],
      "@data/*": ["apps/web/src/app/data/*"],
      "@assets/*": ["apps/web/src/app/assets/*"],
      "@pages/*": ["apps/web/src/app/pages/*"],
      "@services/*": ["apps/web/src/app/services/*"],
      "@hooks/*": ["apps/web/src/app/hooks/*"],
      "@utils/*": ["apps/web/src/app/utils/*"],
      "@types/*": ["apps/web/src/app/types/*"],
      "@nx/eslint-plugin": ["node_modules/@nx/eslint-plugin"]
    }

    // @lmsrepo/prisma = ../../../../../../generated/prisma
    // "paths": {
    //   "@lmsrepo/prisma": ["../../../../../../generated/prisma"],
    // },
  }
}

{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": [
      "es2022"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": [
      "development"
    ],

    "baseUrl": "./apps/web/src/app",
    "paths": {
      "@components/*": ["components/*"],
      "@globals/*": ["globals/*"],
      "@data/*": ["data/*"],
      "@assets/*": ["assets/*"],
      "@pages/*": ["pages/*"],
      "@services/*": ["services/*"],
      "@hooks/*": ["hooks/*"],
      "@utils/*": ["utils/*"],
      "@types/*": ["types/*"]
    }

    // @lmsrepo/prisma = ../../../../../../generated/prisma
    // "paths": {
    //   "@lmsrepo/prisma": ["../../../../../../generated/prisma"],
    // },
  }
}